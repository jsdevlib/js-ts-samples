{
  "name": "ts-node-starter",
  "version": "1.0.0",
  "description": "A simple template for starter server projects with nodejs and ts",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage --setupFiles dotenv/config",
    "test:watch": "jest --watch",
    "start:dev": "nodemon",
    "start:prod": "npm run build && node build/index.js",
    "build": "rimraf ./build && tsc",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
    "release": "release-it",
    "prepare": "husky install",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "prepublish:npm": "npm run build",
    "publish:npm": "npm publish --access public",
    "prerelease": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beyondnetPeru/ts-nodejs-starter.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/beyondnetPeru/ts-nodejs-starter/issues"
  },
  "homepage": "https://github.com/beyondnetPeru/ts-nodejs-starter#readme",
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.3",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "release-it": "^15.5.0",
    "rimraf": "^3.0.2",
    "supertest": "^6.3.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
