{
  "name": "ts-adv-samples",
  "version": "1.0.0",
  "description": "Samples for NodeJs and Typescript based on research for advanced features",
  "main": "index.js",
  "scripts": {
    "start:dev": "npx nodemon",
    "build": "rimraf ./dist && tsc -p tsconfig.build.json",
    "start": "npm run build && node build/index.js",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix",
    "postinstall": "husky install",
    "test": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beyondnetPeru/ts-adv-samples.git"
  },
  "keywords": [],
