  "bugs": {
    "url": "https://github.com/beyondnetPeru/ts-adv-samples/issues"
  },
  "homepage": "https://github.com/beyondnetPeru/ts-adv-samples#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "nodemon": "^2.0.20",
    "rimraf": "^4.1.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@typescript-eslint/eslint-plugin": "^5.53.0",
